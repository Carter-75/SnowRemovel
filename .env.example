# Snow removal pricing
# Base price per square foot used for estimating driveway cost.
SNOW_BASE_RATE_PER_SQFT=0.06
# Additional rate per 1,000 sq ft to scale pricing with larger driveways.
SNOW_RATE_PER_1000_SQFT=0.02
# Max square footage treated as a "short job" for UI/labeling.
SNOW_SHORT_JOB_MAX_SQFT=450
# Service area sizing multiplier (uses sqrt(parcel sqft) * factor).
# Lower values reduce estimates. Default matches current logic.
SNOW_SERVICE_AREA_SQRT_FACTOR=5

# Parcel data (Wisconsin statewide)
# ArcGIS parcel layer used to measure driveway area by address.
PARCEL_LAYER_URL=https://services3.arcgis.com/n6uYoouQZW75n5WI/arcgis/rest/services/Wisconsin_Statewide_Parcels/FeatureServer/0

# Email (Resend)
# Resend API key used to send owner + customer emails.
# Setup: Create a Resend account → create an API key → paste here.
RESEND_API_KEY=
# Verified sender email or domain for Resend (must be verified in Resend).
# Setup: Add your domain in Resend → add the DNS records at your registrar → wait for verification → use a sender like "Name <no-reply@yourdomain.com>".
RESEND_FROM=
# Owner inbox that receives quote + payment notifications.
RESEND_TO=cartermoyer75@gmail.com

# Business
# Mailing address used in the Right-to-Cancel legal notice.
BUSINESS_ADDRESS=401 Gillette St, La Crosse, WI 54603

# Stripe
# Secret key for creating checkout sessions.
# Setup: Stripe dashboard → Developers → API keys → copy Secret key.
STRIPE_SECRET_KEY=
# Webhook signing secret to verify Stripe events.
# Setup: Stripe dashboard → Developers → Webhooks → add endpoint /api/stripe/webhook → copy Signing secret.
STRIPE_WEBHOOK_SECRET=
# Public site URL used for Stripe success/cancel redirects.
# Setup: Your public site URL (production domain or local dev URL).
NEXT_PUBLIC_SITE_URL=

# Vercel KV (Upstash)
# REST API URL for KV database (required for persistent YTD totals on Vercel).
# Setup: Vercel dashboard → Storage → KV → Connect to project → copy REST API URL.
KV_REST_API_URL=
# REST API token for KV database.
# Setup: Vercel dashboard → Storage → KV → copy REST API token.
KV_REST_API_TOKEN=

# Driving fee
# OpenRouteService API key used to calculate drive time and distance.
# Setup: OpenRouteService account → create API key → paste here.
ORS_API_KEY=
# Starting address for drive fee calculations.
DRIVE_ORIGIN_ADDRESS=401 Gillette St, La Crosse, WI 54603
# Vehicle miles per gallon.
DRIVE_MPG=30
# Gas price used to estimate fuel cost per mile.
DRIVE_GAS_PRICE=3.5
# Wear-and-tear cost per mile.
DRIVE_WEAR_RATE=0.1
# Minimum per-mile rate for long-distance jobs (covers travel + time baseline).
DRIVE_PER_MILE_RATE=1.5
# Hourly rate to value travel time.
DRIVE_HOURLY_RATE=15
# Minutes one-way before any drive fee applies.
DRIVE_FREE_MINUTES=15
# Minutes one-way before partial upfront deposit is required.
DRIVE_HALF_UPFRONT_MINUTES=30
# Minutes one-way before 50% of total is required upfront.
DRIVE_FULL_UPFRONT_MINUTES=60
